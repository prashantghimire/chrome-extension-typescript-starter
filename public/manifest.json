{
  "manifest_version": 2,
  "name": "Chrome Extension TypeScript Starter",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  },
  "options_page": "popup.html",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "https://*/*"
  ]
}
